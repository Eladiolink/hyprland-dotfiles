{
    "height": 42,
    "margin-top": 4,
    "margin-left": 20,
    "margin-bottom": 1,
    "margin-right": 20,
    "mode": "dock",
    "position": "top",
    "gtk-layer-shell": true,
    "reload_style_on_change": true,

    //Modules layout

	"modules-left": [
        "custom/power",
        "custom/launcher",
        "idle_inhibitor",
        "cpu",
        "wlr/taskbar"
       ],
	"modules-center": [
        "hyprland/workspaces"
        ],
	"modules-right": [
        "custom/notification",
        "custom/updater",
        "memory",
        "disk",
        "pulseaudio",
        "tray",
        "clock"
        
    ],
    // Sourced modules
    "pulseaudio": {
    "tooltip": true,
    "scroll-step": 5,
    "format": "{icon} {volume}%",
    "format-muted": "<span color='#7aa2f7'> </span>Mudo",
    "on-click": "amixer sset Master toggle",
    "on-click-right": "pavucontrol",
    "tooltip-format": "{desc}",
    "format-icons": {
        "default": [
            "<span color='#7aa2f7'></span>",
            "<span color='#7aa2f7'></span>",
            "<span color='#7aa2f7'></span>"
        ]
    
    }
},
"idle_inhibitor": {
    "format": "{icon}",
    "rotate": 0,
    "format-icons": {
        "activated": "󰥔",
        "deactivated": ""
    }
},
// Taskbar
"wlr/taskbar": {
    "format": "{icon}",
    "icon-size": 18,
    "tooltip-format": "{title}",
    "on-click": "activate",
    "on-click-middle": "close",
    "ignore-list": []
},
  // Workspaces
"hyprland/workspaces": {
    "disable-scroll": false,
    "on-scroll-up": "hyprctl dispatch workspace e+1",
    "on-scroll-down": "hyprctl dispatch workspace e-1",
    "on-click": "activate",
    "all-outputs": true,
    "active-only": false,
    "persistent-workspaces": {
        "1": [],
        "2": [],
        "3": [],
        "4": []
    },
    "format": "{icon}",
    "format-icons": {
        "active": "<span font='12'>󰮯</span>",
        "empty": "<span font='8'></span>",
        "persistent": "󰊠",
        "default": "󰊠"  // Ícone de fantasma
    }
},
    "network": {
        "justify": "center",
        "format-ethernet": "󰈀",
        "tooltip-format-ethernet": "{ipaddr}",
        "format-wifi": "󰤨",
        "tooltip-format-wifi": "{essid} {frequency} {signalStrength}",
        "format-disconnected": "󰤭",
        "tooltip-format-disconnected": "Disconnected"
    }, 
	"backlight": {
		"tooltip": false,
		"format": " {}%",
		"interval":1,
        "on-scroll-up": "light -A 5",
		"on-scroll-down": "light -U 5"
	},
    "battery": {
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 10
        },
        "format": "{icon}  <span color='#F1F1F1'>{capacity}%</span>",
        "format-charging": "<span color='#9ece6a'></span> <span color='#F1F1F1'>{capacity}%</span>",
        "format-plugged": " <span color='#F1F1F1'>{capacity}</span>%",
        "format-alt": "<span color='#F1F1F1'>{time}</span> {icon}",
        "format-icons": [
            "<span color='#f7768e'></span>", 
            "<span color='#e0af68'></span>", 
            "<span color='#e0af68'></span>", 
            "<span color='#9ece6a'></span>", 
            "<span color='#9ece6a'></span>"
        ]
    },
    "clock": {
        "format": "{:%R}",
        "rotate": 0,
        "format-alt": "{:%R 󰃭 %d·%m·%y}",
        "tooltip-format": "<tt>{calendar}</tt>",
        "calendar": {
            "mode": "month",
            "mode-mon-col": 3,
            "on-scroll": 1,
            "on-click-right": "mode",
            "format": {
                "months": "<span color='#ffead3'><b>{}</b></span>",
                "weekdays": "<span color='#ffcc66'><b>{}</b></span>",
                "today": "<span color='#ff6699'><b>{}</b></span>"
            }
        },
        "actions": {
            "on-click-right": "mode",
            "on-click-forward": "tz_up",
            "on-click-backward": "tz_down",
            "on-scroll-up": "shift_up",
            "on-scroll-down": "shift_down"
        }
    },
 // Sys tray
        "tray": {
        "icon-size": 18,
        "show-passive-items": true,
        "spacing": 10,
        "reverse-direction": true
    },
    "cpu": {
    "format": "<span color='#7aa2f7'></span> {usage}%",
    "interval": 1
    },
    
    "disk": {
        "format": "<span color='#e0af68'>󰋊</span> {used}",
        "interval": 1,
        "on-click": "gnome-disks"
    },

  "memory": {
    "interval": 30,
    "format": "<span color=\"#7dcfff\"></span> {used}GiB",
    "max-length": 10,
    "on-click": "kitty btop",
    "on-click-right": "killall btop"
    
    }, 
    "mpris": {
    "interval": 10,
	"format": "{player_icon} ",
	"format-paused": "{status_icon} <i>{dynamic}</i>",
	"on-click-middle": "playerctl play-pause",
    "on-click": "playerctl previous",
    "on-click-right": "playerctl next",
    "scroll-step": 5.0,
    "on-scroll-up": "~/.config/hypr/scripts/volume_control.sh --inc",
    "on-scroll-down": "~/.config/hypr/scripts/volume_control.sh --dec",
    "smooth-scrolling-threshold": 1,
	"player-icons": {
        "chromium": "",
		"default": "",
        "firefox": "",
        "kdeconnect": "",
        "mopidy": "",
		"mpv": "󰐹",
        "spotify": "",
		"vlc": "󰕼",
	},
	"status-icons": {
		"paused": "󰐎",
        "playing": "",
        "stopped": "",
	},
	// "ignored-players": ["firefox"]
	"max-length": 30,
},
   
"custom/updater": {
    "format": "<span color='#f75f5f'></span> {}",
    "exec": "~/.config/hypr/scripts/waybar_updates.sh",
    "interval": 900,
    "tooltip": "$(cat /tmp/waybar-updates-tooltip)",
    "on-click": "kitty --hold bash -c '$HOME/.config/hypr/scripts/upgrade.sh;'",
    "on-click-right": "kitty bash -c 'cat /tmp/waybar-updates-list; echo; read -p \"Pressione Enter para fechar...\"'",
    "signal": 8
},
   // Notification
    "custom/notification": {
    "tooltip": false,
    "justify": "center",
    "format": "{icon}",
    "format-icons": {
    "notification": "󰂚<span foreground='red'><sup></sup></span>",
    "none": "󰂚",
    "dnd-notification": "󰂛<span foreground='red'><sup></sup></span>",
    "dnd-none": "󰂛",
    "inhibited-notification": "󰂚<span foreground='red'><sup></sup></span>",
    "inhibited-none": "󰂚",
    "dnd-inhibited-notification": "󰂛<span foreground='red'><sup></sup></span>",
    "dnd-inhibited-none": "󰂛"
           },
           "return-type": "json",
           "exec-if": "which swaync-client",
           "exec": "swaync-client -swb",
           "on-click": "swaync-client -t -sw",
           "escape": true
       },
    "custom/media": {
        "interval": 30,
        "format": "{icon} {}",
        "return-type": "json",
        "max-length": 20,
        "format-icons": {
            "spotify": " ",
            "default": " "
        },
        "escape": true,
        "exec": "$HOME/.config/system_scripts/mediaplayer.py 2> /dev/null",
        "on-click": "playerctl play-pause"
    },
   
    "custom/launcher": {
    "format": "<span foreground=\"#7aa2f7\"></span>",
    "on-click": "wofi --show drun",
    "on-click-right": "killall wofi"
    },
    "custom/power": {
    "format": "<span color='#f75f5f'></span>",  // Ícone vermelho com span color
    "tooltip": false,
    "on-click": "wlogout -b 6"
    }
    }